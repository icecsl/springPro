<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


   <context:component-scan base-package="base.aopDemo.impl" />

    <aop:aspectj-autoproxy />

    <bean class="base.aopDemo.Audience" />


    <!--不使用注解-->
    <bean id="audience1" class="base.aopDemo.Audience1" />
    <aop:config>
        <aop:aspect ref="audience1">
            <aop:pointcut id="perform" expression="execution(* base.aopDemo.Performance.perform(..))"/>

            <aop:before pointcut="execution(* base.aopDemo.Performance.perform(..))" method="silenceCellPhones"/>
            <aop:before method="takeSeats" pointcut-ref="perform"/>
            <aop:after-returning method="applause" pointcut-ref="perform"/>
            <aop:after-throwing method="demandRefund" pointcut-ref="perform"/>
        </aop:aspect>

    </aop:config>

    <!--声明环绕通知-->
    <bean id="audience2" class="base.aopAround.Audience" />
    <!--<context:component-scan base-package="base.aopAround.impl" />-->
    <bean id="performanceAImpl" class="base.aopAround.impl.PerformanceAImpl" />

    <aop:config>
        <aop:aspect ref="audience2">
            <aop:pointcut id="perform1" expression="execution(* base.aopAround.PerformanceA.perform(..))"/>

            <aop:around method="watchPerformance" pointcut-ref="perform1"/>
        </aop:aspect>

    </aop:config>



</beans>